{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch",
      ],
      "matchPackagePatterns": [
        "*",
      ],
      "groupName": "all dependencies",
      "minimumReleaseAge": "6 hours",
    },
  ],
  "prConcurrentLimit": 2,
}
